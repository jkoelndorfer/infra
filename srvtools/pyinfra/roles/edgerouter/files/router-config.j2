firewall {
    all-ping enable
    broadcast-ping disable
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    options {
        mss-clamp {
            interface-type all
            mss 1400
        }
    }
    receive-redirects disable
    send-redirects enable
    source-validation disable
    syn-cookies enable

    group {
    {% for i in ipsets %}
        network-group {{ i }} {
            /* The content of this group is managed by ipset directly. */
        }
    {% endfor %}
    }

    name WAN_INBOUND {
        default-action drop
        rule 500 {
            action accept
            description "Allow responses to internally-initiated traffic"
            log disable
            state {
                established enable
                related enable
            }
        }
        rule 600 {
            action accept
            description "Allow inbound connections from US traffic"
            log disable
            source {
                group {
                    network-group usa-ipv4
                }
            }
        }
    }
}
interfaces {
    ethernet eth0 {
        duplex auto
        poe {
            output off
        }
        speed auto
    }
    ethernet eth1 {
        duplex auto
        poe {
            output off
        }
        speed auto
    }
    ethernet eth2 {
        duplex auto
        speed auto
    }
    ethernet eth3 {
        duplex auto
        poe {
            output off
        }
        speed auto
    }
    ethernet eth4 {
        address {{ vars.router_ip_modem_net_cidr }}
        description "CenturyLink Modem @ {{ secrets.hosts.modem.ip }}"
        duplex auto
        poe {
            output off
        }
        pppoe 0 {
            default-route auto
            description "CenturyLink Internet"
            mtu 1492
            name-server auto
            user-id {{ secrets.centurylink.pppoe_username }}
            password {{ secrets.centurylink.pppoe_password }}

            firewall {
                in {
                    name WAN_INBOUND
                }
            }
        }
        speed auto
    }
    ethernet eth5 {
        address {{ vars.router_ip_cidr }}
        description "EdgeSwitch 24"
        duplex auto
        speed auto
    }
    loopback lo {
    }
    wireguard wg0 {
        address {{ vars.wireguard_router_ip_cidr }}
        listen-port {{ vars.wireguard_listen_port }}
        route-allowed-ips true
        private-key {{ vars.wireguard_key_path }}
        mtu 1400

        {% for p in secrets.wireguard_peers %}
        peer {{ p.pubkey }} {
            allowed-ips {{ p.ip }}/32
        }
        {% endfor %}
    }
}
port-forward {
    auto-firewall disable
    hairpin-nat enable
    lan-interface eth5
    {% for i in secrets.port_forwards %}
    rule {{ loop.index }} {
        description "{{ i.description }}"
        forward-to {
            address {{ i.dest_ip }}
            port {{ i.dest_port }}
        }
        original-port {{ i.src_port }}
        protocol {{ i.protocol }}
    }
    {% endfor %}
    wan-interface {{ vars.wan_iface }}
}
protocols {
    static {
    }
}
service {
    dhcp-server {
        disabled false
        hostfile-update disable
        shared-network-name lan {
            authoritative enable
            subnet {{ vars.lan_network }} {
                default-router {{ vars.router_ip }}
                dns-server {{ secrets.hosts.miniserv.ip }}
                lease 86400
                start {{ vars.dhcp_start }} {
                    stop {{ vars.dhcp_end }}
                }
                {% for i in secrets.static_dhcp %}
                static-mapping {{ i.name }} {
                    ip-address   {{ i.ip }}
                    mac-address  {{ i.mac }}
                }
                {% endfor %}
            }
        }
        static-arp disable
        use-dnsmasq disable
    }
    dns {
        forwarding {
            cache-size 10000
            listen-on vtun0
            listen-on eth5
            {% for i in vars.upstream_dns %}
            name-server {{ i }}
            {% endfor %}
            {% for i in secrets.dns %}
            {% for d in i.dns %}
            options address=/{{ d }}/{{ i.ip }}
            {% endfor %}
            {% endfor %}
            {% for i in secrets.static_dhcp %}
            {% for d in i.dns %}
            options address=/{{ d }}/{{ i.ip }}
            {% endfor %}
            {% endfor %}
        }
    }
    nat {
        rule 1300 {
            description "Redirect outbound DNS to internal DNS server"
            inbound-interface eth5
            protocol tcp_udp
            source {
                address {{ vars.bad_citizens_subnet }}
            }
            inside-address {
                address {{ secrets.hosts.miniserv.ip }}
                port    53
            }
            destination {
                address !{{ secrets.hosts.miniserv.ip }}
                port    53
            }
            type destination
        }
        rule 7000 {
            description "NAT: LAN <-> Internet"
            outbound-interface {{ vars.wan_iface }}
            protocol all
            source {
                address {{ vars.lan_network }}
            }
            type masquerade
        }
    }
    ssh {
        disable-password-authentication
        listen-address {{ vars.router_ip }}
        port 22
        protocol-version v2
    }
}
system {
    host-name router0
    login {
        user {{ secrets.admin.username }} {
            authentication {
                encrypted-password {{ secrets.admin.encrypted_password()  }}
                plaintext-password ""
                public-keys {{ secrets.admin.username }}@main {
                    type {{ secrets.admin.pubkey_type }}
                    key {{ secrets.admin.pubkey_key }}
                }
            }
            full-name "{{ secrets.admin.full_name }}"
            level admin
        }
    }
    name-server {{ vars.upstream_dns[0] }}
    ntp {
        server 0.ubnt.pool.ntp.org {
        }
        server 1.ubnt.pool.ntp.org {
        }
        server 2.ubnt.pool.ntp.org {
        }
        server 3.ubnt.pool.ntp.org {
        }
    }
    package {
        repository stretch {
            components "main contrib non-free"
            distribution stretch
            password ""
            url http://http.us.debian.org/debian
            username ""
        }
    }
    syslog {
        global {
            facility all {
                level notice
            }
            facility protocols {
                level debug
            }
        }
    }
    task-scheduler {
        task dyndns {
            executable {
                path /config/user-data/dyndns/dyndns.sh
            }
            interval 1m
        }
    }
    time-zone UTC
}


